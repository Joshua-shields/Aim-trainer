<Window x:Class="Aim_trainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aim_trainer"

        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Button x:Name="StartButton" Content="Start Game" Click="StartButton_Click" Width="100" Margin="0,0,10,0"/>
            <TextBlock x:Name="ScoreText" Text="Score: 0" VerticalAlignment="Center"/>
            <TextBlock x:Name="TimeText" Text="Time: 30" Margin="20,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <Canvas x:Name="GameCanvas" Grid.Row="1" Background="LightGray"/>
    </Grid>
</Window>
